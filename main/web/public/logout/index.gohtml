{{define "title"}}Logout{{end}}
{{define "content"}}
    {{template "topdoc"}}

    {{if .LoggedIn}}
        <script>
            deleteCookie();
            window.location.href = "/";

            function deleteCookie() {
                document.cookie = "auth=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
            }
        </script>
    {{else}}
        <script>
            window.location.href = "/";
        </script>
    {{end}}

    {{template "botdoc"}}
{{end}}